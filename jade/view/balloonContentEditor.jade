form.form-horizontal
	div.control-group 
		label.control-label Исполнитель:
		label.controls
			select
				option 1
				option 2
				option 3
				option 4
				option 5
	div.control-group
		label.control-label Дата начала:
		label.controls
			div#dp1.input-append.date(data-date = "[%= PERIOD_BEG %]", data-date-format = "dd.mm.yyyy")
				input#date1.input-small(size = "16", type = "text", value = "[%= PERIOD_BEG %]")
				span.add-on
					i.icon-th
	div.control-group
		label.control-label План дата закр.:
		label.controls
			div#dp1.input-append.date(data-date = "[%= PLAN_PERIOD_END %]", data-date-format = "dd.mm.yyyy")
				input#date1.input-small(size = "16", type = "text", value = "[%= PLAN_PERIOD_END %]")
				span.add-on
					i.icon-th
	div.control-group
		label.control-label Комментарий:
		label.controls
			textarea(rows = "3")
div.pull-left
	a.btn.btn-danger(href="#") Удалить
div.pull-right
	a.btn.btn-primary(href="#") Сохранить
	a.btn(href="#") Отмена
